{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "typechain-types/*"]
        }
    },
    "include": ["./test/**/*", "./scripts/**/*", "./typechain-types/**/*"],
    "exclude": ["node_modules", "dist"],
    "files": ["./hardhat.config.ts"]
}
